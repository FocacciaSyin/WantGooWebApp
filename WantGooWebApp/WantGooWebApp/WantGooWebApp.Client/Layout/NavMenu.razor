@rendermode InteractiveAuto

<div class="navmenu">
    <input type="checkbox" id="navmenu-toggle"/>
    <nav class="sitenav" aria-labelledby="main-menu" onclick="document.getElementById('navmenu-toggle').click();">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded">
            <FluentNavLink Href="UserStock"
                           Match="NavLinkMatch.All"
                           Icon="@(new Icons.Regular.Size16.AppFolder())"
                           IconColor="Color.Accent">
                個股現況
            </FluentNavLink>
            <FluentNavLink Href="counter"
                           Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())"
                           IconColor="Color.Accent">
                Counter
            </FluentNavLink>
            <FluentNavLink Href="weather"
                           Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())"
                           IconColor="Color.Accent">
                Weather
            </FluentNavLink>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;

}